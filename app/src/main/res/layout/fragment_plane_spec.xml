<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaneSpecFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plane_image"
            android:maxHeight="300dp"
            android:src="@android:color/background_dark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/plane_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_plane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/engines_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/plane_length"
                android:fontFamily="sans-serif-thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/crew"
                android:fontFamily="sans-serif-thin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/wing_size"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-thin"
                android:layout_height="match_parent"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/wing_size_1"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-thin"
                android:layout_height="match_parent"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</FrameLayout>